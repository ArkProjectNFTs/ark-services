[Unit]
Description=Ark MarketPlace API dev
AssertPathExists=/usr/bin/ark-metadata-marketplace-dev
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=~
ExecStart=/usr/bin/ark-metadata-marketplace-dev --config-path /etc/ark-project/ark-metadata-marketplace.config.dev.yml
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
PrivateTmp=true
NoNewPrivileges=true

[Install]
WantedBy=default.target
[Unit]
Description=Ark Indexer Transaction for Dev
AssertPathExists=/usr/bin/ark-indexer-transactions-dev
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=~
ExecStart=/usr/bin/ark-indexer-transactions-dev --config-path /etc/ark-project/transaction.config.dev.yml
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
PrivateTmp=true
NoNewPrivileges=true

[Install]
WantedBy=default.target
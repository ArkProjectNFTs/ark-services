[Unit]
Description=Ark Indexer Transaction for Staging
AssertPathExists=/usr/bin/ark-indexer-transactions-staging
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=~
ExecStart=/usr/bin/ark-indexer-transactions-staging --config-path /etc/ark-project/transaction.config.staging.yml
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
PrivateTmp=true
NoNewPrivileges=true

[Install]
WantedBy=default.target
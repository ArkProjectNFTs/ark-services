[Unit]
Description=Ark Indexer Transaction for production
AssertPathExists=/usr/bin/ark-indexer-transactions-production
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=~
ExecStart=/usr/bin/ark-indexer-transactions-production --config-path /etc/ark-project/transaction.config.production.yml
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
PrivateTmp=true
NoNewPrivileges=true

[Install]
WantedBy=default.target